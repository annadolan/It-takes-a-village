<div class="container extra-pad text-center">
<%= form_for :user, class: "form-group" do |f| %>
<h4>Forgot your password?</h4>
  <p>First, enter the phone number on your account.</p>
  <%= f.text_field :phone, class: "form-control short", style: "margin-left: auto; margin-right: auto", placeholder: "Phone Number", id:"Phone" %>
  <br>
  <button type="submit" class="btn btn-default submit-button">Get your confirmation code</button></p>
<% end %>

</div>
