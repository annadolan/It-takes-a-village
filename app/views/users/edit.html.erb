<%= javascript_include_tag('emailvalidation.js') %>
<body class="login-page">
  <div class="container extra-pad">
    <div class ="row">
      <div class = "text-center">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
          <div class="panel panel-default">
            <div class="panel-body less-padding">
              <h3 class="form-title">Update your account</h3>
            </div>
            <div class="panel-footer panel-pad">

                <div class="form-group">
                  <%= simple_form_for @user, class: "form-group" do |f| %>
                    <div class="form-group">
                      <%= f.text_field :first_name, class: "form-control login-items", placeholder: "First Name", id: "First Name" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :last_name, class: "form-control login-items", placeholder: "Last Name", id: "Last Name" %>
                    </div>

                    <div class="form-group">
                      <%= f.text_field :street_number, class: "form-control login-items", placeholder: "Street Address", id: "Street Address" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :unit_number, class: "form-control login-items", placeholder: "Unit Number", id: "Unit Number" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :city, class: "form-control login-items", placeholder: "City", id: "City" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :state, class: "form-control login-items", placeholder: "State", id: "State" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :zip_code, class: "form-control login-items", placeholder: "Zip", id: "Zip" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field number_to_phone(:phone), class: "form-control login-items", placeholder: "Phone number", id: "Phone" %>
                    </div>
                    <div class="form-group">
                      <%= f.text_field :email, class: "form-control login-items", placeholder: "Email", id: "Email" %>
                    </div>
                    <div class="form-group">
                    <%= f.input :avatar, as: :file, label: 'Upload a new profile picture!' %>
                    </div>
                    <button type="submit" class="btn btn-default submit-button login-items">Update Account</button></p>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col-sm-3">
            </div>
          </div>
        </div>
</body>
