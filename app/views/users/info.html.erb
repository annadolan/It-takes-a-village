<%= javascript_include_tag('jquery.maskedinput.js') %>
<body class="login-page">
  <div class="container extra-pad">
    <div class ="row">
      <div class = "text-center">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
          <div class="panel panel-default">
            <div class="panel-body less-padding">
              <h3 class="form-title">Add more information</h3>
            </div>
            <div class="panel-footer panel-pad">
              <%= form_for @user, class: "form-group" do |f| %>
                <div class="form-inline">
                  <%= f.text_field :street_number, class: "form-control split-form-street", placeholder: "Street Address", id: "Street Address" %>
                  <%= f.text_field :unit_number, class: "form-control split-form-unit", placeholder: "Unit", id: "Unit Number" %>
                </div>
                <br>
                <div class="form-inline">
                  <%= f.text_field :city, class: "form-control split-form-city", placeholder: "City", id: "City" %>
                  <%= f.text_field :state, class: "form-control split-form-state", placeholder: "State", id: "State" %>
                  <%= f.text_field :zip_code, class: "form-control split-form-zip", placeholder: "Zip", id: "Zip" %>
                </div>
                <br>
                <div class="form-group">
                  <%= f.text_field number_to_phone(:phone), class: "form-control login-items", placeholder: "Phone number", id: "Phone" %>
                </div>
                <div class="form-group input">
                  <p>Upload profile picture <small>(up to 1mb)</small>:</p>
                  <%= f.file_field :avatar %>
                </div>
                <button type="submit" class="btn btn-default submit-button login-items">Submit</button></p>
              <% end %>
              <p class="form-link"><%= link_to "Skip for now", dashboard_path %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
          </div>
        </div>
      </div>
    </body>
