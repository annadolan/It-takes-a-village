<div class="col-md-6">
  <div class="panel panel-default top-pad">
    <% if !current_user.user_events.empty? %>
    <div class="btn-group">
    <button type="button" class="btn btn-default submit-button dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Your events
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <% @presenter.user_events.each do |user_event| %>
        <li><%= link_to user_event.event.name, event_path(user_event.event) %></li>
      <% end %>
    </div>
    </ul>
    <% end %>
    <div class="btn">
  <%= link_to "Create a new event", new_event_path, class: "btn btn-danger", type: "button" %>
</div>
