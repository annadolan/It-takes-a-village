<div class="container extra-pad">
  <div class ="row text-center">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
  <h2>Welcome <%= current_user.first_name %>! <%= link_to(image_tag('settings.png', class: "settings"), edit_user_path(current_user)) %></h2>
</div>
<div class="panel-body">
  <p><%= image_tag current_user.avatar.url(:medium) %></p>
  <hr>

<div class="form-inline"><%= simple_form_for current_user, html: { class: 'form-group'}, url: user_path(current_user), :method => :PUT do |form| %>
  <%= form.input :avatar, as: :file, label: 'Upload a new profile picture!' %>
  <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></button>
<% end %></div>
</div>
</div>

</div>
<div class="col-md-6">
  <div class="panel panel-default top-pad">
  <h4><%= current_user.first_name %>'s events:</h4>

  <% @presenter.user_events.each do |user_event| %>
    <p><%= link_to user_event.event.name, event_path(user_event.event), class: "btn btn-default submit-button" %></p>
  <!-- </p>Your role is: <%= user_event.role.name %></p> -->
  <% end %>
<hr>
  <h4 class="dash-link"><%= link_to "Create a new event", new_event_path %></h4>
    <hr>


  <%= render partial: "map" %>
</div>
</div>
</div>
</div>
