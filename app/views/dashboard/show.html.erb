<div class="container">
  <div class ="row">
    <div class="col-md-6">
  <h2>Welcome <%= current_user.first_name %></h2>
  <p><%= image_tag current_user.avatar.url(:medium) %></p>

<p><%= simple_form_for current_user, url: user_path(current_user), :method => :PUT, class: "form-group" do |form| %>
  <%= form.input :avatar, as: :file, label: 'Upload a new profile picture!' %>
  <button type="submit" class="btn btn-danger">Upload!</button></p>
<% end %></p>
<%= render partial: "map" %>
</div>
<div class="col-md-6">
  <h4>Here are your current events:</h4>

  <% @presenter.events.each do |event| %>
    <h5><%= link_to event.name, event_path(event) %></h5>
    <% event.roles.each do |role| %>
      </p>Your role is: <%= role.name %></p>
      <% end %>
  <% end %>

  <h4>Create a new event <%= link_to "here.", new_event_path %>


  <%= render partial: "map" %>

</div>
</div>
</div>
