<div class="container extra-pad">
  <div class ="row text-center">
    <div class="col-md-6">
      <div class="panel panel-default">

  <h2>Welcome <%= current_user.first_name %>! <%= link_to(image_tag('settings.png', class: "settings"), edit_user_path(current_user)) %></h2>

<div class="panel-body bottom-pad">
  <p><%= image_tag(current_user.avatar.url(:medium), class:"img-thumbnail") %></p>
  <br>

